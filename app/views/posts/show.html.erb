
<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>


<p id="notice"><%= notice %></p>

<%= image_tag @post.image.url(:large) %>



<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>:</strong>



  <p class="body">
  <%= @post.body %>
</p>


<div id="comments">
	<h2><%= @post.comments.count %> Comments</h2>
	<%= render @post.comments %>

	<h3>Add a comment: </h3>
	<%= render "comments/form" %> 
</div>
</div>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


